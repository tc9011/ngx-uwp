{
  "name": "ngx-uwp",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:lib && ng serve --open",
    "build": "npm run build:lib && ng build",
    "build:site": "ng build  --prod --aot",
    "build:lib": "npm run lint && ng build ngx-uwp",
    "test": "ng test",
    "prettier": "prettier --config ./.prettierrc --write 'src/**/!(polyfills).{ts,scss}' 'components/**/!(polyfills).{ts,scss}'",
    "lint": "npm run prettier && npm run lint:ts && npm run lint:style",
    "lint:ts": "tslint -c tslint.json 'components/**/!(demo|testing)/!(polyfills).ts' 'src/app/**/!(demo|testing)/!(polyfills).ts' --fix",
    "lint:style": "stylelint \"src/app/**/*.scss\" --fix && stylelint \"components/**/*.scss\" --fix",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "release": "release-it",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.0.0",
    "@angular/cdk": "^8.0.0",
    "@angular/common": "^8.0.0",
    "@angular/compiler": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "@angular/platform-browser": "^8.0.0",
    "@angular/platform-browser-dynamic": "^8.0.0",
    "@angular/platform-server": "^8.0.0",
    "@angular/router": "^8.0.0",
    "@angular/service-worker": "^8.0.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.5.2",
    "tinycolor2": "^1.4.1",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.1",
    "@angular-devkit/build-ng-packagr": "^0.800.1",
    "@angular/cli": "~8.0.1",
    "@angular/compiler-cli": "^8.0.0",
    "@angular/language-service": "~8.0.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.1",
    "commitizen": "^3.1.1",
    "conventional-changelog-cli": "^2.0.21",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.4.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^8.2.1",
    "ng-packagr": "^5.2.0",
    "prettier": "^1.18.2",
    "prettier-stylelint": "^0.4.2",
    "protractor": "~5.4.0",
    "release-it": "^12.3.3",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.9.3",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "lint-staged": {
    "components/**/!(demo|testing)/!(polyfills).{ts,scss}": [
      "npm run lint",
      "git add"
    ],
    "src/app/**/!(demo|testing)/!(polyfills).{ts,scss}": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
